@using Swappler.Models

@model User
@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<div class="container-fluid">
    <div class="col-md-3 " style="margin-top:1%;">
        <div id="userphoto">
            <div class="gravatar-wrapper-128"><img id="image" src="body-img.jpg" alt="" class="logo" width="120" height="120"><span>Oliver Oreshkovski</span></div>

        </div>
    </div>

    <!-- end col-md-3 -->
    <div class="col-md-8" id="ep-change-image">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6">
                    <form role="form">
                        <h2>Profile</h2>
                        <br>
                        <div class="form-group">
                            <p id="first_name"> @Model.Name <p>
                        </div>

                        <div class="form-group">
                            <p id="last_name"> @Model.LastName <p>
                        </div>

                        <div class="form-group">
                            <p id="display_name"> @Model.Username <p>
                        </div>
                        <div class="form-group">
                            <p id="email"> @Model.Email <p>
                        </div>
                
                <hr>
               </form>
            </div>
        </div>
    </div>
    <!-- end col-md-3 -->

</div>
<!-- end col-md-3 -->
</div>

