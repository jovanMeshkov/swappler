@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="container-fluid">
    <div class="row" id="section-1">

        <div class="col-lg-6" style="margin-top:80px">

            <h2 id="center">
                <a href="#">Swappler</a>
            </h2>

            <p id="center1" class="lead">
                Sign in to get started
            </p>

            @* Login Form *@
            <form id="form-login" class="form-horizontal">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="login-status alert"></div>
                    </div>
                </div>

                @* Email *@
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <input id="email-or-username" name="EmailOrUsername"
                               class="form-control" placeholder="Email or Username"
                               type="text" value="bit01"/>
                    </div>
                </div>

                @* Password *@
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <input id="password" name="Password"
                               class="form-control" placeholder="Password"
                               type="password" value="jovan"/>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row" style="margin: 0">
                        @* Sign In *@
                        <div class="col-md-3 col-md-offset-3">
                            <button id="btn-login" class="btn btn-primary btn-block has-spinner" role="button"
                                    type="button">
                                <span class="spinner"><i class="fa fa-spin fa-refresh"></i></span>
                                Login
                            </button>
                        </div>
                        @* Register *@
                        <div class="col-md-3 col-md-offset-0">
                            <a id="btn-register" class="btn btn-success btn-block" href="/Register" role="button">
                                Register
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-6" style="margin-top:50px;">
            <img src="~/Public/Images/12.png" class=" img-responsive" />
        </div>

    </div>

</div>


