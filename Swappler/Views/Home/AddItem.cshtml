
@{
    Layout = "~/Views/Shared/MasterLayout.cshtml"; 
}
<div class="container-fluid">
    <div class="col-md-3">
        <div id="userphoto" class="col-md-offset-2">
            <div class="gravatar-wrapper-128">
                <img id="image" src="~/Public/Images/AddPicture.png" title="Click to add picture" 
                    alt="Place for picture" class="logo" width="200" height="200"></div>
        </div>
    </div>
    <!-- end col-md-3 -->
    <div style="margin-top:50px" class="col-md-9">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                 <div class="form-group">
                      <input type="text"  class="form-control input-lg" placeholder="Item name" tabindex="1">
                 </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                 <div class="form-group">
                      <textarea rows="10" class="form-control input-lg" placeholder="Description" tabindex="2"></textarea>
                 </div>
            </div>
            
        </div>

        <div class="row">
                  <button type="submit" style="float:left; margin-left:15px " class="btn tf-btn btn-default" >Add</button>
        </div>
    </div>
            
</div>
