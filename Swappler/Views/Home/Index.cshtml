@using Swappler.ViewModels

@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

@model IndexViewModel

<div class="container-fluid">

    <div class="col-md-3">
        <p class="lead">Shop Name</p>
        <div class="col-lg-4 icon-wrapper">
            <img class="swap-item-icon img-thumbnail" src="">
        </div>

        <div class="col-lg-8">
            <div class="swap-item-name"></div>
            <div class="swap-item-owner"></div>
            <div class="swap-item-creation-date"></div>
            <div class="swap-item-description">

            </div>
        </div>
    </div>

    <div id="news-feed" class="col-md-6">

        <div id="list-swap-items">
            @{
                var swapItems = Model.SwapItems;
            }
            @Html.Partial("~/Views/Partials/SwapItemsForFeed.cshtml", swapItems)
        </div>


        <button id="btn-load-more" class="btn btn-block btn-default has-spinner">
            <span class="spinner"><i class="fa fa-spin fa-refresh"></i></span>
            Load More
        </button>


    </div>

    <div id="notifications" class="col-md-3">
        <div id="notifications-header" class="row">
            <div class="col-lg-12">
                <h4 id="notifications-title" class="pull-left">
                    Notifications
                    <span id="notifications-count" class="badge">
                        2
                    </span>
                </h4>
                <button id="btn-notifications-toggle" type="button" data-toggle="0"
                        class="pull-right fa fa-chevron-down"></button>
            </div>

        </div>
        <div class="row">
            <hr />
        </div>
        <div id="notifications-body" class="row">
            <div class="col-lg-12">
                <div class="notification-entry">
                    <div class="swap-request-notification">
                        <span class="swap-request-requestor">Jovan Meshkov want to offer you</span>
                        <div class="swap-request-item-offer">his Finki Trap Card</div>
                        <div class="swap-request-money-offer">and additional 200 dollars</div>
                        <div class="swap-request-item">for your Madu</div>
                    </div>
                </div>
                <hr />
                <div class="notification-entry">
                    <div class="swap-request-notification">
                        <span class="swap-request-requestor">Jovan Meshkov want to offer you</span>
                        <div class="swap-request-item-offer">his Finki Trap Card</div>
                        <div class="swap-request-money-offer">and additional 200 dollars</div>
                        <div class="swap-request-item">for your Madu</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

</div>