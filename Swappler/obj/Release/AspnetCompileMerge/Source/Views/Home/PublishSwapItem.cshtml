@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center alert-warning"
                style="padding: 25px 0; margin: 10px 0 -20px 0">
                Publish Swap Item
            </h3>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-offset-3 col-lg-6" style="margin-top: 50px">
            <form id="form-swap-item-publish">
                <div class="col-lg-4">
                    <div id="swap-item-choose-photo" class="text-center">
                        <img id="swap-item-choosen-photo" class=""
                             src="~/Public/Images/AddPhoto.png" title="Click to add photo"
                             alt="Place for photo">
                    </div>
                    <input id="swap-item-photo-input" name="Photo"
                           class="hidden" type="file" accept=".jpg, .png, .jpeg" />
                </div>



                <div class="col-lg-8">

                    <div class="form-group">
                        <input id="swap-item-name" type="text" name="Name"
                        class="form-control input-lg"
                        placeholder="Name" tabindex="1">
                    </div>

                    <div class="form-group">
                        <textarea id="swap-item-description" name="Description"
                                  class="form-control input-lg" rows="10"
                                  placeholder="Description" tabindex="2"></textarea>
                    </div>

                    <button id="btn-swap-item-publish"
                            class="btn tf-btn btn-default pull-right has-spinner" type="button">
                        <span class="spinner"><i class="fa fa-spin fa-refresh"></i></span>
                        <b>Publish</b>
                    </button>

                </div>
            </form>

        </div>

    </div>

</div>
